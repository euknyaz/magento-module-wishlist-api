<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/wishlist" method="GET">
        <service class="Mediaman\WishlistApi\Api\WishlistRepositoryInterface" method="getCurrentWishlist"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wishlist/customer/:customerId" method="GET">
        <service class="Mediaman\WishlistApi\Api\WishlistRepositoryInterface" method="getCustomerWishlist"/>
        <resources>
            <resource ref="self"/>
            <!--resource ref="Magento_Wishlist::config_wishlist"/-->
        </resources>
    </route>
    <route url="/V1/wishlist/:sku" method="PUT">
        <service class="Mediaman\WishlistApi\Api\WishlistRepositoryInterface" method="addItem"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wishlist/customer/:customerId/:sku" method="PUT">
        <service class="Mediaman\WishlistApi\Api\WishlistRepositoryInterface" method="addItem"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wishlist/:itemId" method="DELETE">
        <service class="Mediaman\WishlistApi\Api\WishlistRepositoryInterface" method="removeItem"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wishlist/customer/:customerId/:itemId" method="DELETE">
        <service class="Mediaman\WishlistApi\Api\WishlistRepositoryInterface" method="removeItem"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
